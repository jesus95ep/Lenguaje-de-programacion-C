#include <stdio.h>
#include <math.h>
//EJERCICIO 1
//PERMITIR EL INGRESO DEL RADIO (FLOTANTE) E IMPRIMIR EN PANTALLA LA LONGITUD DE LA CIRCUNFERENCIA Y LA SUPERFICIE DEL CIRCULO CORRESPONDIENTE

int main (){

    float RADIO, CIRCUNFERENCIA, SUPERFICIE;

    printf("INGRESE EL RADIO :"); // EL RADIO ES LA MITAD DEL DIAMETRO EN TOTAL, SI EL DIAMETRO ES 20CM EL RADIO ES 10CM
    scanf("%f", &RADIO);

    CIRCUNFERENCIA = RADIO * 2 * M_PI; // (M_PI) ESTE ES EL VALOR DE PI, PARA CALCULAR LA SUPERFICIE NECESITAS RADIO * 2 * PI
    SUPERFICIE = M_PI * pow(RADIO,2); // PARA CALCULAR LA SUPERFICIE NECESITAS CALCULAR PI POR RADIO AL CUADRADO
                                        // POW ES UNA FUNCION QUE SE UTILIZA PARA ELEVAR UN NUMERO A UNA POTENCIA

    printf("CIRCUNFERENCIA ES : %.2f  SUPERFICIE ES : %.2f", CIRCUNFERENCIA, SUPERFICIE);


}
